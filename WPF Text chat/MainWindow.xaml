<Window x:Class="WPF_Text_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Text_chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Button x:Name="SendButton" Canvas.Left="30" Canvas.Bottom="30" Content="Send" Height="30" Canvas.Top="374" Width="81"/>
            <TextBox x:Name ="IP" Canvas.Top="30" Canvas.Left="30" Width="150" Text="IP-adress"/>
            <TextBox x:Name ="Port" Canvas.Top="30" Canvas.Left="230" Width="150" Text="Port"/>
            <TextBlock x:Name ="Chat" Canvas.Left="30" Canvas.Top="80" Width="350" Height="228" />
            <TextBox x:Name ="Name" Canvas.Bottom="80" Canvas.Left="30" Width="100" Text="Name"/>
            <TextBox x:Name ="Massage" Canvas.Bottom="80" Canvas.Left="150" Width="100" Text="Massage"/>
        </Canvas>
    </Grid>
</Window>
